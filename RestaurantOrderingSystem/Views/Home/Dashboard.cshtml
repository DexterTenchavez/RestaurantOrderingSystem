@model IEnumerable<RestaurantOrderingSystem.Models.Order>

@{
    ViewData["Title"] = "Admin Dashboard";

   
    var totalOrders = Model.Count();
    var totalRevenue = Model.Sum(o => o.TotalPrice);
    var mostRecent = Model.OrderByDescending(o => o.Id).FirstOrDefault()?.OrderNo ?? "N/A";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🍽️ Restaurant Admin Dashboard</h2>

    
    <div class="row text-center mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-primary rounded-4">
                <div class="card-body">
                    <h5 class="card-title text-primary fw-bold">Total Orders</h5>
                    <h2>@totalOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-success rounded-4">
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold">Total Revenue</h5>
                    <h2>₱@totalRevenue.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-warning rounded-4">
                <div class="card-body">
                    <h5 class="card-title text-warning fw-bold">Most Recent Order</h5>
                    <h4>@mostRecent</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg rounded-4 p-3">
        <h4 class="mb-3 fw-bold">Order List</h4>

        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>Order No</th>
                    <th>Customer</th>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Payment Method</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderNo</td>
                            <td>@order.Customer</td>
                            <td>@order.Item</td>
                            <td>@order.Quantity</td>
                            <td>₱@order.TotalPrice.ToString("N2")</td>
                            <td>@order.PaymentMethod</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-info btn-sm me-1">Edit</a>
                                <form asp-action="Delete" asp-route-id="@order.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this order?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No orders found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
