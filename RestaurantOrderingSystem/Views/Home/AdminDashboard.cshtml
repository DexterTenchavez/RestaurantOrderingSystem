@model RestaurantOrderingSystem.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="container-fluid py-4">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card revenue-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Total Revenue</h6>
                            <h3 class="card-value">₱@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                        <div class="icon-container">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card orders-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Total Orders</h6>
                            <h3 class="card-value">@Model.TotalOrders</h3>
                        </div>
                        <div class="icon-container">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card pending-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Pending Orders</h6>
                            <h3 class="card-value">@Model.PendingOrders</h3>
                        </div>
                        <div class="icon-container">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card reservations-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Today's Reservations</h6>
                            <h3 class="card-value">@Model.TodayReservations</h3>
                        </div>
                        <div class="icon-container">
                            <i class="fas fa-table"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Section -->
    <div class="row">
        <div class="col-12">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Orders</h5>
                    <span class="badge">@Model.Orders.Count orders</span>
                </div>
                <div class="card-body">
                    @if (Model.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order No</th>
                                        <th>Customer</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Table</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@order.OrderNo</strong>
                                                @if (order.User != null)
                                                {
                                                    <br />
                                                    <small class="text-muted">by @order.User.FullName</small>
                                                }
                                            </td>
                                            <td>@order.Customer</td>
                                            <td>
                                                @if (order.OrderItems.Any())
                                                {
                                                    <div class="order-items">
                                                        @foreach (var item in order.OrderItems.Take(2))
                                                        {
                                                            <span class="item-badge">@item.Quantity x @item.ItemName</span>
                                                        }
                                                        @if (order.OrderItems.Count > 2)
                                                        {
                                                            <span class="text-muted">+@(order.OrderItems.Count - 2) more</span>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                            <td><strong>₱@order.TotalPrice.ToString("N2")</strong></td>
                                            <td>
                                                @if (order.TableReservation != null)
                                                {
                                                    <div class="table-info">
                                                        <span class="table-badge">@order.TableReservation.TableNumber</span>
                                                        <small>@order.TableReservation.NumberOfGuests guests</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="status-badge status-@order.Status.ToLower()">@order.Status</span>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="action-buttons">
                                                    <select class="status-select" data-order-id="@order.Id">
                                                        <option value="Pending" selected="@(order.Status == "Pending")">Pending</option>
                                                        <option value="Confirmed" selected="@(order.Status == "Confirmed")">Confirmed</option>
                                                        <option value="Preparing" selected="@(order.Status == "Preparing")">Preparing</option>
                                                        <option value="Ready" selected="@(order.Status == "Ready")">Ready</option>
                                                        <option value="Completed" selected="@(order.Status == "Completed")">Completed</option>
                                                        <option value="Cancelled" selected="@(order.Status == "Cancelled")">Cancelled</option>
                                                    </select>
                                                    <button class="btn btn-danger btn-sm delete-order" data-order-id="@order.Id">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-search fa-3x"></i>
                            <h5>No orders found</h5>
                            <p>There are no orders to display at the moment.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Status update
            document.querySelectorAll('.status-select').forEach(select => {
                select.addEventListener('change', function() {
                    const orderId = this.dataset.orderId;
                    const status = this.value;

                    fetch('/Home/UpdateOrderStatus', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: `id=${orderId}&status=${status}`
                    }).then(() => {
                        location.reload();
                    });
                });
            });

            // Delete order
            document.querySelectorAll('.delete-order').forEach(btn => {
                btn.addEventListener('click', function() {
                    const orderId = this.dataset.orderId;
                    if (confirm('Are you sure you want to delete this order?')) {
                        fetch('/Home/DeleteOrder', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: `id=${orderId}`
                        }).then(() => {
                            location.reload();
                        });
                    }
                });
            });
        });
    </script>
}