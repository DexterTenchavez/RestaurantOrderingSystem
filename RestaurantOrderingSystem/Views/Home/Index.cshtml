@{
    ViewData["Title"] = "Welcome to Gourmet Haven";
    Layout = null; /* Remove layout to remove topbar */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">Welcome to Gourmet Haven</h1>
            <p class="lead mb-4">Experience the finest culinary delights in a cozy atmosphere</p>
            <div class="hero-buttons">
                <a href="@Url.Action("Login", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-utensils me-2"></i>Order Now
                </a>
                <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-table me-2"></i>Book a Table
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col">
                    <h2>Why Choose Us</h2>
                    <p class="lead">We offer the best dining experience in town</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M8.1 13.34l2.83-2.83L3.91 3.5c-1.56 1.56-1.56 4.09 0 5.66l4.19 4.18zm6.78-1.81c1.53.71 3.68.21 5.27-1.38 1.91-1.91 2.28-4.65.81-6.12-1.46-1.46-4.2-1.1-6.12.81-1.59 1.59-2.09 3.74-1.38 5.27L3.7 19.87l1.41 1.41L12 14.41l6.88 6.88 1.41-1.41L13.41 13l1.47-1.47z" />
                                </svg>
                            </div>
                            <h5>Fresh Ingredients</h5>
                            <p class="text-muted">We use only the freshest ingredients sourced from local farms</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" />
                                </svg>
                            </div>
                            <h5>Quick Service</h5>
                            <p class="text-muted">Fast and efficient service to satisfy your cravings</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M22 9h-4.79l-4.38-6.56c-.19-.28-.51-.42-.83-.42s-.64.14-.83.43L6.79 9H2c-.55 0-1 .45-1 1 0 .09.01.18.04.27l2.54 9.27c.23.84 1 1.46 1.92 1.46h13c.92 0 1.69-.62 1.93-1.46l2.54-9.27L23 10c0-.55-.45-1-1-1zM12 4.8L14.8 9H9.2L12 4.8zM18.5 19h-13l-2.13-7.8L4.5 11h15l2.13 7.8-2.13.2z" />
                                </svg>
                            </div>
                            <h5>Table Reservation</h5>
                            <p class="text-muted">Book your table in advance for a seamless dining experience</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Menu Preview Section -->
    <section class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col">
                    <h2>Our Specialties</h2>
                    <p class="lead">Taste our most popular dishes</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-3 col-6">
                    <div class="card menu-item h-100">
                        <div class="card-body text-center p-4">
                            <div class="menu-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M12 5.5c-3.89 0-6.95-.84-8.69-1.43A.993.993 0 0 0 2 5.02V19c0 .68.47 1.27 1.11 1.44.98.26 2.03.56 3.14.56.93 0 1.82-.19 2.64-.52.21-.09.43-.14.65-.14.27 0 .52.09.73.24.65.47 1.46.82 2.33.82.87 0 1.68-.35 2.33-.82.21-.15.46-.24.73-.24.22 0 .44.05.65.14.82.33 1.71.52 2.64.52 1.11 0 2.16-.3 3.14-.56.64-.17 1.11-.76 1.11-1.44V5.02c0-.68-.47-1.27-1.11-1.44C18.95 4.66 15.89 5.5 12 5.5z" />
                                </svg>
                            </div>
                            <h6>Fried Chicken</h6>
                            <p class="text-primary fw-bold">₱25</p>
                            <small class="text-muted">Crispy golden fried chicken with special spices</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card menu-item h-100">
                        <div class="card-body text-center p-4">
                            <div class="menu-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M12 3c-4.97 0-9 4.03-9 9s4.03 9 9 9c.83 0 1.5-.67 1.5-1.5 0-.39-.15-.74-.39-1.01-.23-.26-.38-.61-.38-.99 0-.83.67-1.5 1.5-1.5H16c2.76 0 5-2.24 5-5 0-4.42-4.03-8-9-8zm-5.5 9c-.83 0-1.5-.67-1.5-1.5S5.67 9 6.5 9 8 9.67 8 10.5 7.33 12 6.5 12zm3-4C8.67 8 8 7.33 8 6.5S8.67 5 9.5 5s1.5.67 1.5 1.5S10.33 8 9.5 8zm5 0c-.83 0-1.5-.67-1.5-1.5S13.67 5 14.5 5s1.5.67 1.5 1.5S15.33 8 14.5 8zm3 4c-.83 0-1.5-.67-1.5-1.5S16.67 9 17.5 9s1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" />
                                </svg>
                            </div>
                            <h6>Burger Steak</h6>
                            <p class="text-primary fw-bold">₱30</p>
                            <small class="text-muted">Juicy beef patty with mushroom gravy</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card menu-item h-100">
                        <div class="card-body text-center p-4">
                            <div class="menu-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M8.1 13.34l2.83-2.83L3.91 3.5c-1.56 1.56-1.56 4.09 0 5.66l4.19 4.18zm6.78-1.81c1.53.71 3.68.21 5.27-1.38 1.91-1.91 2.28-4.65.81-6.12-1.46-1.46-4.2-1.1-6.12.81-1.59 1.59-2.09 3.74-1.38 5.27L3.7 19.87l1.41 1.41L12 14.41l6.88 6.88 1.41-1.41L13.41 13l1.47-1.47z" />
                                </svg>
                            </div>
                            <h6>Spaghetti</h6>
                            <p class="text-primary fw-bold">₱20</p>
                            <small class="text-muted">Classic Italian pasta with meat sauce</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="card menu-item h-100">
                        <div class="card-body text-center p-4">
                            <div class="menu-icon">
                                <svg viewBox="0 0 24 24">
                                    <path d="M17.66 8L12 2.35 6.34 8C4.78 9.56 4 11.64 4 13.64s.78 4.11 2.34 5.67 3.61 2.35 5.66 2.35 4.1-.79 5.66-2.35S20 15.64 20 13.64 19.22 9.56 17.66 8zM6 14c.01-2 .62-3.27 1.76-4.4L12 5.27l4.24 4.38C17.38 10.77 17.99 12 18 14H6z" />
                                </svg>
                            </div>
                            <h6>Sisig</h6>
                            <p class="text-primary fw-bold">₱28</p>
                            <small class="text-muted">Sizzling pork sisig with chili and calamansi</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-2">&copy; 2025 Gourmet Haven Restaurant. All rights reserved.</p>
            <p class="mb-0">123 Food Street, Culinary City | Phone: (123) 456-7890</p>
            <div class="mt-3">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-tiktok"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>