@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Privacy Policy</h1>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3>Information We Collect</h3>
                    <ul>
                        <li>Name, email, phone number</li>
                        <li>Order history and preferences</li>
                        <li>Payment information (secured)</li>
                        <li>Device and usage data</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3>How We Use Your Data</h3>
                    <ul>
                        <li>Process your orders and reservations</li>
                        <li>Send order confirmations</li>
                        <li>Improve our services</li>
                        <li>Protect against fraud</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3>Data Sharing</h3>
                    <p>We don't sell your data. We only share with:</p>
                    <ul>
                        <li>Trusted service providers</li>
                        <li>When required by law</li>
                        <li>With your permission</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3>Your Rights</h3>
                    <ul>
                        <li>Access your data</li>
                        <li>Correct your data</li>
                        <li>Delete your data</li>
                        <li>Opt-out of marketing</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3>Contact Us</h3>
                    <p class="mb-1">Email: privacy@gourmethaven.com</p>
                    <p class="mb-1">Phone: (555) 123-4567</p>
                    <p class="mb-0 text-muted">Last Updated: @DateTime.Now.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>