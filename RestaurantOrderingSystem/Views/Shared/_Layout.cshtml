<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gourmet Haven</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Enhanced Topbar only shown for authenticated users -->
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-utensils me-2"></i>Gourmet Haven
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "AdminDashboard" ? "active" : "")"
                                       asp-controller="Home" asp-action="AdminDashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                               
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateOrder" ? "active" : "")"
                                       asp-controller="Home" asp-action="CreateOrder">
                                        <i class="fas fa-plus-circle me-1"></i>Home
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "UserDashboard" ? "active" : "")"
                                       asp-controller="Home" asp-action="UserDashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>
                               
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")"
                                   asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-shield-alt me-1"></i>Privacy
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold">@User.Identity.Name</span>
                                        <small class="opacity-75">@(User.IsInRole("Admin") ? "Administrator" : "Customer")</small>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Home" asp-action="LogOff" method="post" class="dropdown-item p-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link p-2 text-decoration-none w-100 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>